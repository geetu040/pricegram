<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Product</title>
    <link rel="icon" type="image/x-icon" href="../assets/favicon.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/css/item.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">PriceGram</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/favourites">Favourites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/history">Activity</a>
                    </li>
                </ul>
                <form method="GET" action="/products/na" class="d-flex" role="search">
                    <input id="q" name="q" class="form-control me-2" type="search" placeholder="Search"
                        aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
                <div class="justify-content-end">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item" style="width: 70px;">
                            <div class="text-center">
                                <a class="nav-link  active" href="/profile">
                                    <i class="fa fa-user-circle-o" aria-hidden="true" style="font-size:30px;"></i>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/logout">Sign Out</a>
                        </li>

                    </ul>
                </div>
            </div>
    </nav>
    <p>
        <!-- Product section-->
    <section class="py-5">
        <div class="d-flex justify-content-center">
            <h1 style="color:rgb(3, 29, 134); font-weight:700; font-size: 60px">
                <%=product.vendor%>
            </h1>
            <h1 style="color:rgb(249, 78, 16); font-weight:700;">
                <%=product.trend%>
            </h1>
        </div>
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <%if(product.mainImageLink){%>
                        <img class="card-img-top mb-5 mb-md-0" src="<%=product.mainImageLink%>" alt="..." />
                        <%}%>
                </div>
                <div class="col-md-6">
                    <div class="lh-lg">
                        <%if(product.category){%>
                            <h3 style="color:rgb(3, 29, 134); font-weight:700;">
                                <%=product.category%>
                            </h3>
                            <%}%>
                                <%if(product.title){%>
                                    <a href=<%=product.slug%> style="text-decoration: none; color: black">
                                        <h1>
                                            <%=product.title%>
                                        </h1>
                                    </a>
                                    <%}%>
                                        <%if(product.brand){%>
                                            <div>
                                                <span class="fs-5" style="color:rgb(3, 29, 134); font-weight:700">
                                                    <%=product.brand%>
                                                </span>
                                            </div>
                                            <%}%>
                                                <%if(product.discountedPrice){%>
                                                    <div id="price" class="fs-5 mb-5">
                                                        <span class="text-decoration-line-through">
                                                            Rs. <%=product.price %>
                                                        </span>
                                                        <span class="fs-3"
                                                            style="color:rgb(249, 78, 16); font-weight:700;">
                                                            &#160 &#160 &#160 Rs. <%=product.discountedPrice%>
                                                        </span>
                                                        <br>
                                                    </div>
                                                    <%}else{%>
                                                        <div id="price" class="fs-5 mb-5"
                                                            style="color:rgb(249, 78, 16); font-weight:700;">
                                                            <span class="fs-3">
                                                                Rs. <%=product.price%>
                                                            </span>
                                                        </div>
                                                        <%}%>

                    </div>

                    <p class="lead">
                        <%=product.title%>
                    </p>
                    <div class="d-flex">
                        <div style="margin-right: 5px">
                            <form method="POST" action="/favourites">
                                <input id="id" name="id" type="hidden" value="<%=product.id%>">
                                <button class="btn btn-outline-dark" type="submit">
                                    <i class="bi bi-star-fill" style="color:orange"></i>
                                    <span style="font-weight: 500;">
                                        Add to Favourites
                                    </span>
                                </button>
                            </form>
                        </div>
                        <div>
                            <a href="<%=product.slug%>"class="btn btn-primary" style="background-color:rgb(0, 0, 180)">
                                <i class="bi-cart-fill me-1"></i>
                                Buy Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <%if(product.deliveryDetails){%>
                <div class="shadow p-3 mb-5 bg-body rounded" style="width: 20rem;">
                    <h2>Delivery</h2>
                    <div class="card" style="width: 18rem;">
                        <ul class="list-group list-group-flush">
                            <%product.deliveryDetails.forEach(function(deliveryDetail){ %>
                                <li class="list-group-item">
                                    <%=deliveryDetail%>
                                </li>
                                <% });%>
                                    <%}%>
                        </ul>
                    </div>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>
                                    Delivery Time
                                </td>
                                <td>
                                    <%=product.deliveryTime%>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="shadow p-3 mb-5 bg-body rounded" style="width: 20rem;">
                    <h2>
                        Rating
                    </h2>
                    <div>
                        <span class="fs-1" style="color:rgb(250, 117, 69); font-weight:700;">
                            <%=product.rating%>
                        </span> /5
                    </div>
                </div>
                <div>
                    <%if(product.description){%>
                        <div id="specifications">
                            <div class="shadow p-3 mb-5 bg-body rounded" style="width: 1000px;">
                                <h2>Specifications</h2>
                                <p class="lh-lg">
                                <p class="fs-5">
                                    <%=product.description%>
                                </p>
                                </p>
                            </div>
                        </div>
                        <%}%>

                </div>
                <%if(product.reviews){%>
                    <div class="shadow p-3 mb-5 bg-body rounded">
                        <h2>Reviews</h2>
                        <ul class="list-group">
                            <% if(product.reviews){product.reviews.forEach(function(review){ %>
                                <div class="shadow p-3 mb-5 bg-body rounded">
                                    <h3><i class="bi bi-person-circle"></i></h3>
                                    <li class="list-group-item">
                                        <%= review %>
                                    </li>
                                </div>
                                <%});}%>
                        </ul>
                    </div>
                    <%}%>
                        <a href="<%=product.slug%>" style="color: black;">
                            <i class="bi bi-cart4" style="font-size:100px;"></i>
                            <i class="bi bi-arrow-right" style="font-size:50px;"></i>
                        </a>
        </div>
    </section>

    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4">Related Products</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% if(rproducts){rproducts.forEach(function(product){ %>
                    <div>
                        <div class="col mb-5">
                            <a style="text-decoration: none; color: black" class="item-link"
                                href="/item/<%=product.id%>">
                                <div class="card h-100">
                                    <img class="card-img-top" src=<%=product.mainImageLink%>
                                    alt="..." />
                                    <div class="card-body p-4">
                                        <div class="text-center">
                                            <h5 class="fw-bolder">
                                                <%=product.title%>
                                            </h5>
                                            <p>
                                                <%=product.price%>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <%});}%>
            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer id="footer" class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/js/item.js"></script>
</body>

</html>